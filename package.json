{
  "name": "boilerplate-turborepo-starter",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "pnpm lint:editorconfig && pnpm lint:prettier && turbo lint",
    "lint:cache": "pnpm lint:editorconfig && pnpm lint:prettier && turbo lint:cache",
    "lint:editorconfig": "editorconfig-checker",
    "lint:prettier": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format": "pnpm format:prettier",
    "format:prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo test",
    "test:update": "vitest test -u",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@vitest/coverage-v8": "^2.0.0",
    "editorconfig-checker": "^5.1.8",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.10.0"
}
